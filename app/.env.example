# ==========================================
# EXAMPLE ENVIRONMENT CONFIGURATION
# Copy this file to .env.local for development
# ==========================================

# Environment Mode
VITE_ENV_MODE=development

# Backend API URL
VITE_BACKEND_URL=http://localhost:5000

# Cloudflare Turnstile (Opsional - untuk proteksi bot)
# Dapatkan dari: https://dash.cloudflare.com/?to=/:account/:zone/turnstile
VITE_TURNSTILE_SITE_KEY=1x00000000000000000000AA

# R2 Configuration
VITE_R2_PUBLIC_URL=https://streaminganime.animeku.xyz
VITE_R2_FRONTEND_URL=https://front-end.animeku.xyz

# Feature Flags
VITE_DEBUG_LOGS=true
VITE_DEBUG_ERROR_BOUNDARY=true
VITE_USE_MOCK_DATA=false
