# ==========================================
# ENVIRONMENT CONFIGURATION
# Copy this file to .env.local for local development
# ==========================================

# Environment Mode
# Options: development, production, test
VITE_ENV_MODE=development

# ==========================================
# BACKEND API URL
# ==========================================

# Local Development (localhost)
VITE_BACKEND_URL=http://localhost:5000

# Staging (optional)
# VITE_BACKEND_URL=https://staging-api.animeku.xyz

# Production (R2 + aaPanel)
# VITE_BACKEND_URL=https://api.animeku.xyz

# ==========================================
# CLOUDFLARE R2 CONFIGURATION
# ==========================================

# R2 Public URL (untuk video streaming)
VITE_R2_PUBLIC_URL=https://streaminganime.animeku.xyz

# R2 Frontend Assets URL
VITE_R2_FRONTEND_URL=https://front-end.animeku.xyz

# ==========================================
# FEATURE FLAGS (Enable/Disable Features)
# ==========================================

# Enable debug logging
VITE_DEBUG_LOGS=true

# Enable error boundary debug info
VITE_DEBUG_ERROR_BOUNDARY=true

# Mock data mode (untuk testing tanpa backend)
VITE_USE_MOCK_DATA=false

# ==========================================
# ANALYTICS & MONITORING (Production Only)
# ==========================================

# Google Analytics ID (opsional)
# VITE_GA_ID=G-XXXXXXXXXX

# Sentry DSN untuk error tracking (opsional)
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
